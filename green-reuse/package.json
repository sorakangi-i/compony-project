    "shadcn": "^2.4.0-canary.12",
    "tailwindcss": "3.4.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
